export EDITOR=nvim

alias ls="ls -G"
alias lsa="ls -a"
alias ll="ls -lh"
alias l="ll"
alias lla="ls -alh"
alias grep="grep --colour"
alias todo="grep TODO -r *"
alias tigs="tig status"
alias git_conflict="$EDITOR $(git status | grep both | cut -d ':' -f 2 | xargs)"
alias git_editedfrommaster="$EDITOR $(git diff --name-only origin/master | xargs)"
alias coffeelint_edited="coffeelint -f ~/coffeelint-altagem.json $( git diff --name-only --diff-filter=ACMRTUXB --stat origin/master | grep coffee | xargs )"
alias rubocop_edited="rubocop $( git diff --name-only --diff-filter=ACMRTUXB --stat origin/master | grep rb | xargs )"
alias ru="rackup"
alias vim='nvim'
alias rs="bin/rails server || rails server"
alias rc="bin/rails console || rails console"
alias mm="middleman"
alias current_week="date +%V"


alias rss="rspec spec/serializers"
alias rsc="rspec spec/controllers"
alias rsm="rspec spec/models"
alias rsa="rspec spec"


PATH="/usr/local/bin:$PATH:$HOME/Applications:/opt/local/bin"
export PATH="/Applications/Postgres.app/Contents/Versions/9.4/bin:$PATH"
export PATH="$PATH:/usr/local/mysql/bin"



# Permissions when creating new files/folder will be :
#    - file :   644
#    - folder : 755
# This is needed for Homebrew to deal properly with my
# different users.

umask 002


# Conflicts between ZSH and GIT HEAD^ resulting in "no matches found" error
# when trying to use HEAD^ in a git command
setopt NO_NOMATCH


# Initialize FASD
eval "$(fasd --init auto)"
alias v='f -e nvim'    # quick opening files with vim and fasd
